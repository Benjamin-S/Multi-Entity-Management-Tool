<UserControl x:Class="Multi_Entity_Management_Tool.View.EditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Multi_Entity_Management_Tool.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:scintilla="clr-namespace:ScintillaNET;assembly=ScintillaNET">
    <Grid>
        <WindowsFormsHost>
            <scintilla:Scintilla x:Name="ScintillaEditor"></scintilla:Scintilla>
        </WindowsFormsHost>
        <TextBox AcceptsTab="True" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</UserControl>
